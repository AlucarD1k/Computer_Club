@model Computer_Club.Models.Computer

@{
    ViewData["Title"] = "Create";
}

<h2>Create computer</h2>

<form asp-action="Create" method="post">
    @* Вывод ошибок модели *@
    @Html.ValidationSummary(true)

    <div>
        <label for="Name">Name</label>
        <input type="text" id="Name" name="Name" value="@Model.Name" required />
    </div>
    <div class="form-group">
        <label for="Characteristics">Characteristics</label>
        <input type="text" id="Characteristics" name="Characteristics" value="@Model.Characteristics" />
    </div>
    <div>
        <label for="IsBooked" class="control-label">Booked</label>
        <select name="IsBooked" class="form-control" id="IsBooked">
            <option value="true">true</option>
            <option value="false">false</option>
        </select>
    </div>
    <button type="submit">Create</button>
</form>
