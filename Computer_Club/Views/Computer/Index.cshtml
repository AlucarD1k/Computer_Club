@model IEnumerable<Computer_Club.Models.Computer>

@{
    ViewData["Title"] = "Computers";
}

<h2>Computers</h2>
<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Booked</th>
        <th>Characteristics</th>
        <th>Edit</th>
        <th>Remove</th>
    </tr>
    </thead>
    <tbody>
    @foreach (Computer computer in Model)
    {
        <tr>
            <td>@computer.Name</td>
            <td>@computer.IsBooked</td>
            <td>@computer.Characteristics</td>
            <td>
                <a href="@Url.Action("Edit", "Computer", new { id = computer.Id })" method="post" style="display: inline">
                    <button>Edit</button>
                </a>
            </td>
            <td>
                <!-- Форма для удаления компьютера -->
                <form action="@Url.Action("Delete", "Computer", new { id = computer.Id })" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="_method" value="DELETE" /> <!-- Имитация метода DELETE -->
                    <button type="submit" class="btn btn-danger">Remove</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
<div>
    <button>
        <a class="nav-link text-dark" asp-area="" asp-controller="Computer" asp-action="Create">Create computer</a>
    </button>
</div>

